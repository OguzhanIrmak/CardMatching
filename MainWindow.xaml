                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="StartGameButton" Content="New Game" Style="{StaticResource Button}"
              Grid.Row="1" Grid.Column="0" Click="StartGameButton_Click"/>
            <Button Name="ExitButton" Content="Exit"
